{
  "family": "colorsnap-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "REPLACE_ME_EXECUTION_ROLE_ARN",
  "taskRoleArn": "REPLACE_ME_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "REPLACE_ME_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -qO- http://localhost:3000/healthz || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 20
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/colorsnap",
          "awslogs-region": "REPLACE_ME_AWS_REGION",
          "awslogs-stream-prefix": "app"
        }
      }
    }
  ]
}


